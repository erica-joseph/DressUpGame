      </ImageView>
      <Button fx:id="Player1attack" layoutX="177.0" layoutY="538.0" mnemonicParsing="false" onAction="#attackPlayer1" text="Sherry">
         <font>
            <Font size="23.0" />
         </font>
      </Button>
      <ProgressBar fx:id="yourHealth" layoutX="138.0" layoutY="44.0" opacity="0.0" prefWidth="200.0" progress="0.0" styleClass="textLife" />
