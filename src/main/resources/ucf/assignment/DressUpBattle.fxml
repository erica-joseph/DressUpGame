      <Button fx:id="Player2WaterGun" layoutX="749.0" layoutY="510.0" mnemonicParsing="false" onAction="#player2WaterGun" prefHeight="92" prefWidth="92" style="-fx-background-color: transparent;" styleClass="watergun" />
