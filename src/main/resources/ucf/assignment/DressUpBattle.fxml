            <Font size="56.0" />
         </font>
      </Text>
      <Text fx:id="lifeStatus1" fill="#da1e1e" layoutX="661.0" layoutY="79.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textLife" text="TTTT" textAlignment="RIGHT">
