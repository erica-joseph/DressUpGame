<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignment.BattleController">
   <children>
      <ImageView fitHeight="667.0" fitWidth="1079.0" layoutX="-79.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true">
